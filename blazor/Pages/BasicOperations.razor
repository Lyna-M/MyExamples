@page "/basic-operations"

<PageTitle>Basic operations</PageTitle>


<h1 class="display-1">Basic Operations</h1>

<div class="row">
        <div class="column">
    <label for="argument1">First one:</label>
    <input type="number" class="form-control" id="argument1" placeholder="Enter first argument" name="argument1" @bind="arg1" />
    </div>
<div class="column">
    <label for="argument2">Second one:</label>
    <input type="number" class="form-control" id="argument2" placeholder="Enter second argument" name="argument2" @bind="arg2" />
    </div>
</div>
<div class="row">
    <div class="d-flex justify-content-center">
    <button class="btn btn-primary nx-2 ny-2" @onclick="DoTheAddition">+</button>
    <button class="btn btn-danger nx-2 ny-2" @onclick="DoTheSubtraction">-</button>
    <button class="btn btn-primary nx-2 ny-2" @onclick="DoTheMultiplication">*</button>
    <button class="btn btn-primary nx-2 ny-2" @onclick="DoTheDivision">/</button>
    </div>
</div>
<div class="row">
    <div class="column">
    <label for="result">Result:</label>
    <input type="number" class="form-control" id="result" placeholder="Result" @bind="result"/>
    </div>
</div>

@code {
    private double arg1;
    private double arg2;
    private double result;

    void DoTheAddition()
    {
        result = arg1 + arg2;
    }

    void DoTheSubtraction()
    {
        result = arg1 - arg2;
    }

    void DoTheMultiplication()
    {
        result = arg1 * arg2;
    }

    void DoTheDivision()
    {
        if (arg2 != 0)
        {
            result = arg1 / arg2;
        }
        else
        {
            result = double.NaN;
        }
    }
}