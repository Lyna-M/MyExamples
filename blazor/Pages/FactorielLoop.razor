@page "/factoriel-loop"

<PageTitle>Factoriel</PageTitle>
<h1 class="display-2">Factoriel</h1>

<div class="row my-1">
    <div class="col">
        <input type="number" class="form-control" @bind="n" />
    </div>
    <div class="col">
        <button class="btn btn-primary" @onclick="FactorielWhile">Factoriel</button>
    </div>
    <div class="col">
        Result:
    </div>
    <div class="col">
        <b> @result </b>
    </div>
</div>
<div class="row my-1">
    <div class="col">
        <input type="number" class="form-control" @bind="n2" />
    </div>
    <div class="col">
        <button class="btn btn-primary mx-2 my-2" @onclick="FactorielWD">Factoriel</button>
    </div>
    <div class="col">
        Result:
    </div>
    <div class="col">
        <b> @result2 </b>
    </div>
</div>
<div class="row my-1">
    <div class="col">
        <input type="number" class="form-control" @bind="n5" />
    </div>
    <div class="col">
        <button class="btn btn-info" @onclick="FactorielDoWhileDown">Factoriel</button>
    </div>
    <div class="col">
        Result:
    </div>
    <div class="col">
        <b> @result5 </b>
    </div>
</div>

@code
{
    uint n = 1;
    ulong result = 0;

    void FactorielWhile()
    {
        result = 1;
        uint counter = 1;
        while (counter <= n)
        {
            result *= counter;
            counter++;
        }
    }

    uint n2;
    ulong result2;

    void FactorielWD()
    {
        result2 = 1;
        uint counter = n2;
        while (counter >= 1)
        {
            result2 *= counter;
            counter--;
        }
    }

    uint n3 = 1;
    ulong result3 = 0;

    void FactorielDD()
    {
        result3 = 1;
        uint counter = 1;
        do
        {
            result3 *= counter;
            counter++;
            counter++;
        } while (counter <= n3);
    }
    uint n4 = 1;
    ulong result4 = 1;

    void FactorielDoWhileDown()
    {
        result4 = 1;
        uint counter = n4;
        do
        {
            result4 *= counter;
            counter--;
        } while (counter >= 1);
    }

    uint n5 = 1;
    ulong result5 = 0;

    ulong result6 = 1;

    void FactorielForDown()
    {
        result6 = 1;
        for (uint counter = 1; counter >= 1; counter++)
        {
            result6 *= counter;
            //Console.WriteLine(counter + " " + result5 + "\n");
        }
    }
}