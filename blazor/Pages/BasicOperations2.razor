@page "/basic-operations2"

<PageTitle>Basic operations</PageTitle>


<h1 class="display-1">Basic Operations</h1>

<div class="row">
        <div class="column">
    <label for="argument1">First one:</label>
    <input type="number" class="form-control" id="argument1" placeholder="Enter first argument" name="argument1" @bind="arg1" />
    </div>
<div class="column">
    <label for="argument2">Second one:</label>
    <input type="number" class="form-control" id="argument2" placeholder="Enter second argument" name="argument2" @bind="arg2" />
    </div>
</div>
<div class="row">
<div class="mb-3">
  <label for="operation" class="form-label">Select Operation</label>
  <select id="operation" class="form-select" @bind="operation">
    <option value="add">Addition (+)</option>
    <option value="subtract">Subtraction (-)</option>
    <option value="multiply">Multiplication (*)</option>
    <option value="divide">Division (/)</option>
    <option value="power">Power to (**)</option>
  </select>
</div>
    <div class="d-flex justify-content-center">
    <button class="btn btn-primary mx-2 my-2"
        @onclick="DoTheOperation">Execute</button>
    </div>
</div>
<div class="row">
    <div class="column">
    <label for="result">Result:</label>
    <input type="text" class="form-control" id="result" 
    placeholder="Result" @bind="result">
    </div>
</div>

@code
 {
    private double arg1;
    private double arg2;
    private double result;
    string operation = "add";

    void DoTheOperation()
    {
        Console.WriteLine("I am alive");
        Console.WriteLine(operation);
        if(operation == "add")
        {
            result = arg1 + arg2;
        }
        if(operation == "subtract")
        {
            result = arg1 - arg2;
        }
        if(operation == "multiply")
        {
            result = arg1 * arg2;
        }
        if(operation == "divide")
        {
            if (arg2 != 0)
            {
                result = arg1 / arg2;
            }
            else
            {
                result = double.NaN;
            }
        }
        if(operation == "power")
        {
            result = Math.Pow(arg1, arg2);  
        }
    }
}