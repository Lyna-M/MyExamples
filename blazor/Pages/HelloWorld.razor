@page "/hello-world"

<PageTitle>Hello World</PageTitle>

<h1 class="display-3">Hello World</h1>
<!-->-buttons for working with the text -->
<div class="row">
    <div class="d-flex justify-content-center">
<button class="btn btn-primary mx-2 my-2" @onclick="Execute">Expand</button>
<button class="btn btn-danger mx-2 my-2" @onclick="ClearAll">Clear</button>
<!-->--- IGNORE ---
</div>
</div>

<div class="row">
    Outpout:
    <pre class="bg-light p-3 border rounded">@message</pre>
</div>

@code {
    private string message = "";


    private void ClearAll()
    {
        message = "";
    }

    private void Execute()
    {
        message = message + "Hello world!!!" + Environment.NewLine;
        message += message + "Hello World, again!" + Environment.NewLine;
        message += message + "Hello World, once again!" + Environment.NewLine;
        message = message + "Goodbye." + Environment.NewLine;
    }
}
