@page "/factoriel-functions"

<PageTitle>Factoriel</PageTitle>
<h1 class="display-2">Factoriel</h1>

<div class="row my-1">
    <div class="col">
        <input type="number" class="form-control" @bind="n" />
    </div>
    <div class="col">
        <button class="btn btn-primary" @onclick="FactorielF1">Factoriel</button>
    </div>
    <div class="col">
        Result:
    </div>
    <div class="col">
        <b> @result </b>
    </div>
</div>



<div class="row my-1">
    <div class="col">
        <input type="number" class="form-control" @bind="n2" />
    </div>
    <div class="col">
        <button class="btn btn-primary mx-2 my-2" @onclick="FactorielWD">Factoriel</button>
    </div>
    <div class="col">
        Result:
    </div>
    <div class="col">
        <b> @result2 </b>
    </div>
</div>
<div class="row my-1">
    <div class="col">
        <input type="number" class="form-control" @bind="n5" />
    </div>
    <div class="col">
        <button class="btn btn-info" @onclick="FactorielDoWhileDown">Factoriel</button>
    </div>
    <div class="col">
        Result:
    </div>
    <div class="col">
        <b> @result5 </b>
    </div>
</div>

@code
{
    uint n = 1;
    ulong result = 1;

    uint n2 = 1;
    ulong result2 = 1;

    void FactorielF1()
    {
        Console.WriteLine(n);
        result = CalculateFactoriel(n);
        Console.WriteLine(result); 
    }

    void FactorielWD()
    {
        Console.WriteLine(n2);
        result2 = CalculateFactoriel(n2);
        Console.WriteLine(result2);
    }

    ulong CalculateFactoriel(uint nn)
    {
        ulong ret = 1;
        for (uint counter = 1; counter <= nn; counter++)
            ret *= counter;
        return ret;
    }
}

    